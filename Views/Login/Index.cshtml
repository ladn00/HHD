@model LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<div>
    <form action="/login" method="post">
        <p>
            <label>Email</label>
            <input name="Email" value="@Model.Email" />
        </p>
        <p>
            <label>Пароль</label>
            <input name="Password" type="password" />
        </p>
        <button>Вход</button>
    </form>
</div>